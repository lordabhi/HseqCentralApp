@model HseqCentralApp.Models.Ncr

@{ string mainviewpanel = ViewData["currentview"] == null ? "_MainContentTabPanel" : (string)ViewData["currentview"];

}

    @Html.DevExpress().CallbackPanel(
    settings =>
    {
        settings.Name = "MainContentCallbackPanel";
        settings.CallbackRouteValues = new { Controller = "Navigation", Action = "MainContentCallbackPanel" };
        settings.Width = Unit.Percentage(100);
        settings.Height = 400;

        settings.SetContent(() =>
        {
            if (mainviewpanel.Contains("NcrEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Ncr)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("CarEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Car)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("ParEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Par)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("FisEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Fis)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("TaskEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.HseqTask)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("ApprovalEdit"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.HseqApprovalRequest)ViewData["record"]);
            }


            else if (mainviewpanel.Contains("NcrNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Ncr)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("CarNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Car)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("ParNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Par)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("FisNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.Fis)ViewData["record"]);
            }

            else if (mainviewpanel.Contains("TaskNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.HseqTask)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("ApprovalNew"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.Models.HseqApprovalRequest)ViewData["record"]);
            }
            else if (mainviewpanel.Contains("CarLinked"))
            {
                @Html.RenderPartial(mainviewpanel, (HseqCentralApp.ViewModels.CarVM)ViewData["record"]);
            }

            else
            {
                @Html.RenderPartial(mainviewpanel);
            }

            // @Html.RenderPartial("_MainContentTabPanel");

        });

        settings.ClientSideEvents.BeginCallback = "OnBeginCallback";
        //settings.ClientSideEvents.EndCallback = "OnEndCallback";
    }
).GetHtml()





