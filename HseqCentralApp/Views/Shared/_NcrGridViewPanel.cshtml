    settings.SettingsCollapsing.ExpandEffect = DevExpress.Web.PanelExpandEffect.Auto;
    settings.SetContent(() =>
    {
@Html.DevExpress().Button(settings1 =>
{
    settings1.Name = "ncr_btn_New";
    settings1.Text = "NEW";
    settings1.Styles.Native = true;
    settings1.Width = Unit.Pixel(50);
    settings1.Height = Unit.Pixel(20);
    settings1.Style["margin-right"] = "5px";


    settings1.ClientSideEvents.Click = "function(s, e) {GridNewRow(s,e); }";
    }).Render();
        
@Html.DevExpress().Button(settings2 =>
{
    settings2.Name = "ncr_btn_Save";
    settings2.Text = "EDIT";
    settings2.Style["margin-right"] = "5px";
    settings2.ClientSideEvents.Click = "function(s, e) { GridEditRow(s,e); }";
    //settings2.ClientSideEvents.Click = "function(s, e) { OnCommandExecuted(s,e); }";
