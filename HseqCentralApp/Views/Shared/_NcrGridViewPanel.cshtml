    settings2.Styles.Native = true;
    settings2.Width = Unit.Pixel(50);
    settings2.Height = Unit.Pixel(20);

}).Render();
@Html.DevExpress().Button(settings3 =>
{
    settings3.Name = "ncr_btn_Cancel";
    settings3.Text = "DELETE";
    settings3.Style["margin-right"] = "5px";
    settings3.Styles.Native = true;
    settings3.Width = Unit.Pixel(70);
    settings3.Height = Unit.Pixel(20);

    settings3.ClientSideEvents.Click = "function(s, e) { GridDeleteRow(s,e); }";
}).Render();

    });
