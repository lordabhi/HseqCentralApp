@Html.DevExpress().Panel(settings =>
{
    settings.Name = "NcrButtonPanel";
    //settings.FixedPosition = DevExpress.Web.PanelFixedPosition.WindowTop;
    settings.SettingsCollapsing.ExpandEffect = DevExpress.Web.PanelExpandEffect.Auto;

    settings.SetContent(() =>
    {
@Html.DevExpress().Button(settings1 =>
{
    settings1.Name = "btn_New";
    settings1.Text = "NEW";
    settings1.Width = Unit.Pixel(10);
    settings1.Height = Unit.Pixel(10);
    settings1.Style["margin-right"] = "5px";
    
    settings1.ClientSideEvents.Click = "function(s, e) { NcrGridView.AddNewRow(); }";
    }).Render();
        
@Html.DevExpress().Button(settings2 =>
{
    settings2.Name = "btn_Save";
    settings2.Text = "EDIT";
    settings2.Style["margin-right"] = "5px";
    settings2.ClientSideEvents.Click = "function(s, e) { EditRow(NcrGridView); }";
}).Render();
@Html.DevExpress().Button(settings3 =>
{
    settings3.Name = "btn_Cancel";
    settings3.Text = "DELETE";
    settings3.Style["margin-right"] = "5px";
    settings3.ClientSideEvents.Click = "function(s, e) { DeleteRow(NcrGridView); }";
}).Render();

    });
}).GetHtml()


